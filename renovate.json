{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "timezone": "Asia/Kolkata",
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "matchDatasources": [
                "docker"
            ],
            "matchPackageNames": [
                "python"
            ],
            "versioning": "docker",
            "groupName": "public-docker-images",
            "schedule": [
                "after 4:15pm every weekday"
            ]
        },
        {
            "matchUpdateTypes": [
                "patch"
            ],
            "automerge": true
        }
    ],
    "labels": [
        "dependencies"
    ],
    "prHourlyLimit": 3,
    "prConcurrentLimit": 5
}
