{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchPackageNames": ["python"],
      "matchManagers": ["dockerfile"],  // Applies to Dockerfile only
      "allowedVersions": "3.9.x",       // Lock to 3.9.x versions
      "pinDigests": true                // Enforce digest pinning
    },
    {
      "matchPackageNames": ["python"],
      "matchManagers": ["dockerfile"],
      "ignoreUnstable": true,           // Skip unstable versions (e.g., `3.13-alpha`)
      "enabled": true                   // Ensure Renovate is enabled for Docker
    }
  ]
}
